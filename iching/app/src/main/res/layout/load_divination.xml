<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/divination" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/old_divination_view_question"
            android:textColor="@color/title_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/question" />
    </LinearLayout>


    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your divination:"
            android:textColor="@color/title_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginStart="50dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Original"
                    android:textColor="@color/red" />

                <ImageView
                    android:id="@+id/cast6"
                    style="@style/original_casting_style" />

                <ImageView
                    android:id="@+id/cast5"
                    style="@style/original_casting_style" />

                <ImageView
                    android:id="@+id/cast4"
                    style="@style/original_casting_style" />

                <ImageView
                    android:id="@+id/cast3"
                    style="@style/original_casting_style" />

                <ImageView
                    android:id="@+id/cast2"
                    style="@style/original_casting_style" />

                <ImageView
                    android:id="@+id/cast1"
                    style="@style/original_casting_style" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="100dp">

                <TextView
                    android:layout_marginStart="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Relating"
                    android:layout_gravity="center"
                    android:textColor="@color/red" />

                <ImageView
                    android:id="@+id/relative6"
                    style="@style/relating_casting_style" />

                <ImageView
                    android:id="@+id/relative5"
                    style="@style/relating_casting_style" />

                <ImageView
                    android:id="@+id/relative4"
                    style="@style/relating_casting_style" />

                <ImageView
                    android:id="@+id/relative3"
                    style="@style/relating_casting_style" />

                <ImageView
                    android:id="@+id/relative2"
                    style="@style/relating_casting_style" />

                <ImageView
                    android:id="@+id/relative1"
                    style="@style/relating_casting_style" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/black"/>

</LinearLayout>